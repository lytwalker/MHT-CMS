<h1>
  Products
  <br>
  <small><%= link_to 'Add New Product', new_product_path %></small>
</h1>

<br>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Sku</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.category.name %></td>
        <td><%= product.sku %></td>
        <td><%= number_to_currency(product.price, unit: "Â£") %></td>
        <td><%= link_to 'Prices', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= will_paginate @products %></p>
