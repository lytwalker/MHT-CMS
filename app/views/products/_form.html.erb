<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :category_id %><br>
    <%= collection_select(:product, :category_id, @categories, :id, :name, {:prompt => false}) %>
  </div>
  <div class="field">
    <%= f.label :thumb %><br>
    <%= f.text_field :thumb, placeholder: "Name of thumb image" %>
  </div>
  <div class="field">
    <%= f.label :preview %><br>
    <%= f.text_field :preview, placeholder: "Name of preview image" %>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, placeholder: "Product name" %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, placeholder: "Product description", size: "40x10" %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.number_field :price %>
  </div>
  <div class="field">
    <%= f.label :sku %><br>
    <%= f.text_field :sku, placeholder: "Product SKU code" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
