<h1>Listing Types</h1>

<br>

<%= link_to 'New Type', new_type_path %>

<br>


<table>
  <thead>
    <tr>
      <th>Banner</th>
      <th>Name</th>
      <th>Description</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @types.each do |type| %>
      <tr>
        <td><%= type.banner %></td>
        <td><%= type.name %></td>
        <td><%= type.description %></td>
        <td><%= type.url %></td>
        <td><%= link_to 'Show', type %></td>
        <td><%= link_to 'Edit', edit_type_path(type) %></td>
        <td><%= link_to 'Destroy', type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= will_paginate @types %></p>
